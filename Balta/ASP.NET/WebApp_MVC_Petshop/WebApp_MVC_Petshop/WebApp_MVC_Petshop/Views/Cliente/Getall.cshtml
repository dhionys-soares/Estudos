@model IEnumerable<WebApp_MVC_Petshop.Models.Cliente>

@{
    ViewData["Title"] = "GetallClientes";
}

<h1>Clientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="GetClienteById" asp-route-id="@item.Id">Ver Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
